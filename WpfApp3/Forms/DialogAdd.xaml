<Window x:Class="WpfApp3.Forms.DialogAdd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3.Forms"
        mc:Ignorable="d"
        Title="DialogAdd" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBox 
            Text="{Binding Name}"
            HorizontalAlignment="Left"  TextWrapping="Wrap" Width="576" Height="107"/>
            <TextBox  
            Text="{Binding Price}"
            HorizontalAlignment="Left"  TextWrapping="Wrap" Width="575" Height="94"/>
            <Button  Click="Button_Click" Content="Добавить" HorizontalAlignment="Left" Height="74" Width="575"/>
        </StackPanel>

    </Grid>
</Window>
